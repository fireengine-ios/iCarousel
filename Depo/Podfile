platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!

def core_pods
 	pod 'Fabric'
    pod 'Crashlytics'
    pod 'FBSDKCoreKit'
    pod 'FBSDKLoginKit'
    pod 'FBSDKShareKit'
    
    pod 'SDWebImage'
    pod 'GoogleConversionTracking'
    pod 'Adjust'
    #pod 'ActiveLabel'

    pod 'Alamofire', '~> 4.5'

    #Keyboard
    pod 'Typist', '~> 1.1.0'

    pod 'ObjectiveDropboxOfficial'


    pod 'SimpleExif'
    pod 'XYPieChart'
    pod 'CircleProgressBar', '~> 0.32'
    pod 'UIImage-Categories'
    pod 'iCarousel'
    pod 'SplunkMint'
    
    # json
    pod 'SwiftyJSON', '~>3'
    pod 'ReachabilitySwift'
    pod 'MBProgressHUD', '~> 1.0.0'
    pod 'ExpandableTableViewController'
    
    #logger
    pod 'XCGLogger', '~> 6.0.1'
    
    #widget
    pod 'MMWormhole', '~> 2.0.0'
    
end

target 'Depo_LifeTech' do
	core_pods

	target 'autosync-widget' do
    	inherit! :search_paths
	end

#  target 'DepoTests' do
#    inherit! :search_paths
#    # Pods for testing
#  end

end

target ‘TC_Depo_LifeTech’ do
	core_pods
end


post_install do |installer|
    installer.pods_project.targets.each do |target|
        if ['XCGLogger'].include? "#{target}"
            print "Setting #{target}'s SWIFT_VERSION to 4.0\n"
            target.build_configurations.each do |config|
                config.build_settings['SWIFT_VERSION'] = '4.0'
            end
            else
            target.build_configurations.each do |config|
                config.build_settings.delete('SWIFT_VERSION')
            end
        end
    end
    
    print "Setting the default SWIFT_VERSION to 3.0\n"
    installer.pods_project.build_configurations.each do |config|
        config.build_settings['SWIFT_VERSION'] = '3.0'
        config.build_settings['ENABLE_BITCODE'] = 'YES'
    end
end
