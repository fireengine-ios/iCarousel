  desc "run tests"
  lane :my_scan do
    scan(
      scheme: "LifeboxUnitTests",
      code_coverage: true,
      devices: ["iPhone 8 Plus (11.4)"],
      test_without_building: true
    )
  end


  #--------------- build ipa ---------------

  desc "Create ipa"
  lane :my_gym do # |options|
